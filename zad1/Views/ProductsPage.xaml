<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:zad1"
             x:Class="zad1.ProductsPage"
             Title="Products">

    <Grid Padding="10">
        <!-- Definiowanie wierszy -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Nagłówki kolumn -->
        <Grid Grid.Row="0" Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="60" />
                <!-- Szerokość dla przycisku Delete -->
            </Grid.ColumnDefinitions>

            <Label Text="Id" Grid.Column="0" FontAttributes="Bold"/>
            <Label Text="Name" Grid.Column="1" FontAttributes="Bold"/>
            <Label Text="Description" Grid.Column="2" FontAttributes="Bold"/>
            <Label Text="Price" Grid.Column="3" FontAttributes="Bold"/>
        </Grid>

        <!-- Kolekcja produktów -->
        <CollectionView Grid.Row="1" ItemsSource="{Binding Products}" SelectionMode="Single" SelectedItem="{Binding SelectedProduct}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <!-- Dla przycisku Delete -->
                        </Grid.ColumnDefinitions>

                        <!-- Wyświetlanie szczegółów produktu w kolumnach -->
                        <Label Text="{Binding Id}" Grid.Column="0" TextColor="Gray"/>
                        <Label Text="{Binding Name}" Grid.Column="1" FontAttributes="Bold"/>
                        <Label Text="{Binding Description}" Grid.Column="2"/>
                        <Label Text="{Binding Price}" Grid.Column="3"/>

                        <!-- Przycisk Edytuj produkt -->
                        <Button Text="Edit" 
                                Command="{Binding BindingContext.EditProductCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}" 
                                CommandParameter="{Binding .}"
                                Grid.Column="4"
                                HorizontalOptions="End"
                                WidthRequest="60"
                                HeightRequest="40" />

                        <!-- Przycisk Usuń produkt -->
                        <Button Text="Delete" 
                                Command="{Binding BindingContext.DeleteProductCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}" 
                                CommandParameter="{Binding .}"
                                Grid.Column="5" 
                                HorizontalOptions="End"
                                BackgroundColor="Red"
                                TextColor="White"
                                WidthRequest="60"
                                HeightRequest="40" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Przycisk Add New Product -->
        <Button Text="Add New Product"
                Command="{Binding AddNewProductCommand}"
                Grid.Row="2"                   
                HorizontalOptions="FillAndExpand" 
                VerticalOptions="End" />
    </Grid>
</ContentPage>
