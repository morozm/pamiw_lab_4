<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:zad1"
             x:Class="zad1.ProductDetailsPage"
             Title="Product Details">

    <StackLayout Padding="10">
        <!-- Bindowanie do właściwości w ViewModelu -->
        <Entry Placeholder="Product Name"
               Text="{Binding Product.Name}" /> <!-- Bindowanie do 'Product.Name' w ViewModelu -->
        <Entry Placeholder="Description"
               Text="{Binding Product.Description}" /> <!-- Bindowanie do 'Product.Description' w ViewModelu -->
        <Entry Placeholder="Price"
               Text="{Binding Product.Price, Converter={StaticResource DecimalConverter}}" /> <!-- Bindowanie do 'Product.Price' w ViewModelu -->

        <!-- Przycisk zapisu bindowany do SaveProductCommand w ViewModelu -->
        <Button Text="Save"
                Command="{Binding SaveProductCommand}" /> <!-- Bindowanie do 'SaveProductCommand' w ViewModelu -->
    </StackLayout>
</ContentPage>
